<Window x:Class="DesktopContactsApplication.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApplication"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Background="Aqua" Margin="10">
            <Label Content="Name"
                   HorizontalAlignment="Center"/>
            <TextBox x:Name="nameTextBox"/>
            
            <Label Content="E-mail"
                   HorizontalAlignment="Center"/>
            <TextBox x:Name="emailTextBox"/>
            
            <Label Content="Phone Number"
                   HorizontalAlignment="Center"/>
            <TextBox x:Name="phoneTextBox"/>

            <Button x:Name="saveContactButton"
                    Click="saveContactButton_Click"
                    Content="Save Contact"
                    Margin="0, 20"
                    
                    Width="100"/>
        </StackPanel>
        
    </Grid>
</Window>
